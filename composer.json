{
    "name": "ionzile/ions",
    "type": "project",
    "description": "The Ion Framework.",
    "keywords": [
        "framework",
        "ionzile",
        "ions"
    ],
    "license": "MIT",
    "homepage": "https://ionzile.com",
    "authors": [
        {
            "name": "Ahmed Hamdi",
            "email": "taha.developer@outlook.com",
            "homepage": "https://ionzile.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "edwinhoksberg/php-fcm": "^1.2",
        "gabordemooij/redbean": "dev-master",
        "ionzile/core": "^1.2.6",
        "ionzile/super": "^1.0",
        "naucon/breadcrumbs": "^1.0.2",
        "smarty/smarty": "^v4.1.0",
        "twig/extra-bundle": "^v3.3.8",
        "twig/intl-extra": "^v3.3.5",
        "twig/twig": "^v3.3.9",
        "verot/class.upload.php": "^2.1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^v1.19.0",
        "filp/whoops": "^2.14.5",
        "pestphp/pest": "^1.21.2",
        "roave/security-advisories": "dev-latest",
        "spatie/ignition": "^1.2.6",
        "spatie/ray": "^1.34.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
