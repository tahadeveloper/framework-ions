{
    "name": "ionzile/ions",
    "type": "project",
    "description": "The Ion Framework.",
    "keywords": [
        "framework",
        "ionzile",
        "ions"
    ],
    "license": "MIT",
    "homepage": "https://arabway.net",
    "authors": [
        {
            "name": "Ahmed Hamdi",
            "email": "taha.developer@outlook.com",
            "homepage": "https://arabway.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "creitive/breadcrumbs": "^3.3.2",
        "edwinhoksberg/php-fcm": "^1.2",
        "sendgrid/sendgrid": "^8.1.11",
        "ramsey/uuid": "^4.7.6",
        "symfony/uid": "^6.4.13",
        "ionzile/core": "^2.1.0",
        "ionzile/super": "^1.2",
        "twig/extra-bundle": "^3.21.0",
        "twig/intl-extra": "^3.21.0",
        "twig/twig": "^3.21.1",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "filp/whoops": "^2.18.0",
        "pestphp/pest": "^v1.23.1",
        "roave/security-advisories": "dev-latest",
        "spatie/ignition": "^1.15.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },"platform": {
            "php": "8.2"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
